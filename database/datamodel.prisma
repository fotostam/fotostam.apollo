type Order {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  subtype: SubType!
  group: SubType
  camp: Int
  groupphoto: Boolean!
  digital: Boolean!
  print: Boolean!
  email: String
  status: Status
  error: String
  photos: [Photo!]!
}

type Photo {
  id: ID! @id
  tag: String!
  amount: Int!
  status: PhotoStatus!
  error: String
  url: String
  order: Order! @relation(link: INLINE)
}

enum PhotoStatus {
  HEALTHY
  ERROR
}

enum SubType {
  BEVERS
  WELPEN
  SCOUTS
  EXPLORERS
  PIVO
  STAFF
  BRONBEEK
  PERSONAL
}

enum Status {
  ON_HOLD
  IN_PRODUCTION
  TO_BE_PICKED
  ERROR
  DONE
}